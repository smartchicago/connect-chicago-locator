%h2 Change your password

= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :password, hint:"Enter new password"
    = f.input :password_confirmation, hint:"Confirm new password"
  = f.hidden_field :reset_password_token
  = f.buttons do
    = f.commit_button :button_html => {:class => "primary", :value => "Change my password"}

= render :partial => "devise/shared/links"
